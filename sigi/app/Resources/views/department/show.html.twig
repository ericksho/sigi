{% extends 'base.html.twig' %}

{% block body %}
    <h1>Departamento {{ department.name }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Id:</th>
                <td>{{ department.id }}</td>
            </tr>
            <tr>
                <th>Nombre:</th>
                <td>{{ department.name }}</td>
            </tr>
            <tr>
                <th>Facultad:&nbsp;&nbsp;</th>
                <td>{{ department.faculty.name }}</td>
            </tr>
        </tbody>
    </table>



    <a href="{{ path('department_index') }}" class="btn btn-info btn1" role="button" >Departamentos</a>
    <a href="{{ path('department_edit', { 'id': department.id }) }}" class="btn btn-primary btn2" role="button">Editar</a>
    {{ form_start(delete_form) }}
        <input type="submit" value="Eliminar" class="btn btn-danger btn2" role="button">
    {{ form_end(delete_form) }}
{% endblock %}
