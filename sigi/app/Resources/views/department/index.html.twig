{% extends 'base.html.twig' %}

{% block body %}
    <h1>Departamentos</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Facultad/Escuela</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for department in departments %}
            <tr>
                <td><a href="{{ path('department_show', { 'id': department.id }) }}">{{ department.id }}</a></td>
                <td>{{ department.name }}</td>
                <td>{% if department.faculty is not null %}{{ department.faculty.name }}{% endif %}</td>
                <td><a href="{{ path('department_show', { 'id': department.id }) }}" class="btn btn-info btn-sm" role="button">Ver</a></td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td><a href="{{ path('department_edit', { 'id': department.id }) }}" class="btn btn-primary btn-sm" role="button">Editar</a></tr>
                {% endif %}
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('department_new') }}" class="btn btn-primary btn-sm" role="button">Crear Nuevo Departamento</a>
{% endblock %}
