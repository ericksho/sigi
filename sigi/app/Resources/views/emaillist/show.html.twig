{% extends 'base.html.twig' %}

{% block body %}
    <h1>EmailList</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ emailList.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ emailList.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('emaillist_index') }}" class="btn btn-info btn1" role="button" >Ver Listado</a>
    <a href="{{ path('emaillist_edit', { 'id': emailList.id }) }}" class="btn btn-primary btn2" role="button">Editar</a>
    
{% endblock %}
