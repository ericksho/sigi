{% extends 'base.html.twig' %}

{% block body %}
    <h1>Oportunidad de Investigación</h1>

    <table>
        <tbody>
            <tr>
                <th>Id:</th>
                <td>{{ oportunityResearch.id }}</td>
            </tr>
            <tr>
                <th>Fecha de Creación:&nbsp;&nbsp;</th>
                <td>{% if oportunityResearch.creationDate %}{{ oportunityResearch.creationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Nombre:</th>
                <td>{{ oportunityResearch.name }}</td>
            </tr>
            <tr>
                <th>Descripción:</th>
                <td>{{ oportunityResearch.description }}</td>
            </tr>
            <tr>
                <th>Público:</th>
                <td>{{ oportunityResearch.public }}</td>
            </tr>
            <tr>
                <th>Modalidad:</th>
                <td>{{ oportunityResearch.modality }}</td>
            </tr>
            <tr>
                <th>Publicado:</th>
                <td>{% if oportunityResearch.publish %}Si{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('oportunityresearch_index') }}" class="btn btn-info btn1" role="button" >Listar Oportunidades</a>
    <a href="{{ path('oportunityresearch_edit', { 'id': oportunityResearch.id }) }}" class="btn btn-primary btn2" role="button">Editar</a>
    {{ form_start(delete_form) }}
        <input type="submit" value="Eliminar" class="btn btn-danger btn2" role="button">
    {{ form_end(delete_form) }}
{% endblock %}
