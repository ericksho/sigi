{% extends 'base.html.twig' %}

{% block body %}
    <h1>OportunityResearch</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ oportunityResearch.id }}</td>
            </tr>
            <tr>
                <th>Creationdate</th>
                <td>{% if oportunityResearch.creationDate %}{{ oportunityResearch.creationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ oportunityResearch.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ oportunityResearch.description }}</td>
            </tr>
            <tr>
                <th>Public</th>
                <td>{{ oportunityResearch.public }}</td>
            </tr>
            <tr>
                <th>Modality</th>
                <td>{{ oportunityResearch.modality }}</td>
            </tr>
            <tr>
                <th>Publish</th>
                <td>{% if oportunityResearch.publish %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('oportunityresearch_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('oportunityresearch_edit', { 'id': oportunityResearch.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
