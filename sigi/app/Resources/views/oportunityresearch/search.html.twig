{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    

    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2-rc.1/css/select2.min.css" rel="stylesheet" />


{% endblock %}

{% block body %}
    <h1>Oportunidades de Investigación</h1>

    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne">
          <h4 class="panel-title">
            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
              Búsqueda Avanzada
            </a>
          </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
          <div class="panel-body">

            <form class="form-horizontal" method="post">

                {% for child in advancedForm.children %}
                    <div class="form-group">
                        {% if 'token' not in form_label(child) %}
                            <label for="mentors" class="col-sm-2 control-label">{{ form_label(child) }}</label>
                        {% endif %} 
                        <div class="col-sm-10">
                            {{ form_widget(child) }}
                        </div>
                    </div>
                    
                {% endfor %}    

              

          </form>
            
          </div>
        </div>
      </div>
    </div>



    <table class="table table-striped">
        <thead>
            <tr>
                <th>Fecha de creación</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Método de evaluación</th>
                <th>Vacantes</th>
                <th>Postulaciones</th>
                <th>Keywords</th>
                <th>Prerequisitos</th>
                <th>Mentores</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for oportunityResearch in oportunityResearches %}
            <tr>
                <td>{% if oportunityResearch.creationDate %}{{ oportunityResearch.creationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ oportunityResearch.name }}</td>
                <td>{{ oportunityResearch.description }}</td>
                <td>{{ oportunityResearch.getModalityText() }}</td>
                <td>{{ oportunityResearch.getOpenVacants() }}/{{ oportunityResearch.vacants }}</td>
                <td><a href="{{ path('oportunityresearch_applications', { 'id': oportunityResearch.id }) }}">{{ oportunityResearch.applications|length }}</a></td>
                <td>
                    <ul>
                        {% for keyword in oportunityResearch.oportunityKeywords() %}
                            <li>
                                {{ keyword.keyword }}
                            </li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <ul>
                        {% for prerequisite in oportunityResearch.prerequisites() %}
                            <li>
                                {{ prerequisite.courseNumber }}
                            </li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <ul>
                        {% for mentorName in oportunityResearch.getMentorsName() %}
                            <li>
                                {{ mentorName }}
                            </li>
                        {% endfor %}
                    </ul>
                </td>
                <td><a href="{{ path('oportunityresearch_show', { 'id': oportunityResearch.id }) }}" class="btn btn-info btn-sm" role="button">Ver</a></td>
                <td><a href="{{ path('oportunityresearch_edit', { 'id': oportunityResearch.id }) }}" class="btn btn-primary btn-sm" role="button">Editar</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <script type="text/javascript"> 

window.onload = function() {

    $(".js-tokenizer").select2({
    tags: true,
    });

    setWidth();
};

function setWidth()
{
    var x = document.getElementsByClassName("select2-container");

    for (i = 0; i<x.length; i++)
    {
        x[i].style.width = "100%";
    }
}
   </script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2-rc.1/js/select2.min.js"></script>
        
{% endblock %}
