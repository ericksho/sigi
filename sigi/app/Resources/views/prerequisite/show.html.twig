{% extends 'base.html.twig' %}

{% block body %}
    <h1>Prerequisite</h1>

    <table>
        <tbody>
            <tr>
                <th>Id:</th>
                <td>{{ prerequisite.id }}</td>
            </tr>
            <tr>
                <th>Sigla:&nbsp;&nbsp;</th>
                <td>{{ prerequisite.courseNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('prerequisite_index') }}" class="btn btn-info btn1" role="button" >Listar Prerequisitos</a>
    <a href="{{ path('prerequisite_edit', { 'id': prerequisite.id }) }}" class="btn btn-primary btn2" role="button">Editar</a>
    {{ form_start(delete_form) }}
        <input type="submit" value="Eliminar" class="btn btn-danger btn2" role="button">
    {{ form_end(delete_form) }}
{% endblock %}
