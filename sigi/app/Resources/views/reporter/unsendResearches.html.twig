{% extends 'base.html.twig' %}

{% block body %}
    <h1>Investigaciones no enviadas</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mentor</th>
                <th>Fecha de creación</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Modalidad</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for research in researches %}
            <tr>
                <td><a href="{{ path('research_show', { 'id': research.id }) }}">{{ research.id }}</a></td>
                <td>{% if research.mainMentor is null %}no tiene mentor {% else %}{{ research.mainMentor.user.name }} {% endif %}</td>
                <td>{% if research.creationDate %}{{ research.creationDate|date('d-m-Y') }}{% endif %}</td>
                <td>{{ research.nameOP }}</td>
                <td>{{ research.descriptionOP }}</td>
                <td>{{ research.modalityOP }}</td>
                <td><a href="{{ path('research_show', { 'id': research.id }) }}" class="btn btn-info btn-sm" role="button">Ver</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   
{% endblock %}
